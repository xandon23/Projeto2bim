            </thead>
            <tbody>
                <?php foreach ($venda->getItens() as $item): ?>
                <tr>
                    <td><?php echo htmlspecialchars($item->getProduto()->getName()); ?></td>
                    <td>R$ <?php echo htmlspecialchars(number_format($item->getProduto()->getValorvenda(), 2, ',', '.')); ?></td>
                    <td><?php echo htmlspecialchars($item->getQuantidade()); ?></td>
                    <td>R$ <?php echo htmlspecialchars(number_format($item->getProduto()->getValorvenda() * $item->getQuantidade(), 2, ',', '.')); ?></td>
